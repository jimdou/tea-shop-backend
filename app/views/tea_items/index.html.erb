<p id="notice"><%= notice %></p>

<h1>Tea Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Link</th>
      <th>Price</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tea_items.each do |tea_item| %>
      <tr>
        <td><%= tea_item.name %></td>
        <td><%= tea_item.description %></td>
        <td><%= tea_item.image %></td>
        <td><%= tea_item.link %></td>
        <td><%= tea_item.price %></td>
        <td><%= tea_item.type %></td>
        <td><%= link_to 'Show', tea_item %></td>
        <td><%= link_to 'Edit', edit_tea_item_path(tea_item) %></td>
        <td><%= link_to 'Destroy', tea_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

